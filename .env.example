# Environment Variables Template for Rules-Emerging-Pattern
# Copy this file to .env and configure your values

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/rules_db
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Rule Configuration
SAFETY_ENFORCEMENT=strict
OPERATIONAL_ENFORCEMENT=advisory
PREFERENCE_ENFORCEMENT=adaptive
DEFAULT_CONFLICT_STRATEGY=context_aware

# System Settings
LOG_LEVEL=INFO
MAX_CONTENT_SIZE=10000
CACHE_SIZE=1000
BATCH_SIZE=32
MAX_CONCURRENT_RULES=100

# Security Settings
ENCRYPTION_KEY=your_encryption_key_here
API_KEY=your_api_key_here
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Performance Settings
ENABLE_CACHING=true
ENABLE_BATCH_PROCESSING=true
ENABLE_PARALLEL_PROCESSING=true
WORKER_POOL_SIZE=4
MAX_EVALUATION_TIME=5.0

# Monitoring and Observability
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=true
SENTRY_DSN=your_sentry_dsn_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Machine Learning Configuration
MODEL_CACHE_DIR=./models
ENABLE_ADAPTIVE_LEARNING=true
LEARNING_RATE=0.001
PATTERN_RECOGNITION_THRESHOLD=0.8

# External Integrations
OPENAI_API_KEY=your_openai_key
GOOGLE_API_KEY=your_google_key
ANTHROPIC_API_KEY=your_anthropic_key

# Content Processing
ENABLE_CONTENT_ANALYSIS=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_LANGUAGE_DETECTION=true
ENABLE_PII_DETECTION=true

# Compliance and Auditing
ENABLE_AUDIT_LOGGING=true
AUDIT_RETENTION_DAYS=90
ENABLE_COMPLIANCE_REPORTING=true
COMPLIANCE_REPORT_SCHEDULE=daily

# Development Settings
DEVELOPMENT=false
DEBUG=false
ENABLE_TEST_ENDPOINTS=false
TEST_DATABASE_URL=sqlite:///./test_rules.db

# Production Settings
PRODUCTION=false
CLUSTER_MODE=false
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30

# Feature Flags
ENABLE_ADVANCED_FILTERING=true
ENABLE_RULE_OPTIMIZATION=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_USER_FEEDBACK=true

# Cloud Configuration (AWS/GCP/Azure)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
GCP_PROJECT_ID=your_gcp_project_id
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id